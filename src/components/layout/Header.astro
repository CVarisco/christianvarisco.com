---
import type { Lang } from '../../i18n';
import LanguageSwitcher from './LanguageSwitcher.astro';

interface Props {
  lang: Lang;
  currentPath: string;
  navigation: {
    links: Array<{ label: string; href: string }>;
    cta: { label: string; href: string };
  };
}

const { lang, currentPath, navigation } = Astro.props;
---

<header class="header">
  <div class="header-container">
    <nav class="header-nav">
      <!-- Logo -->
      <a href={lang === 'it' ? '/' : '/en/'} class="logo" aria-label="Christian Varisco - Home">
        <img src="/images/brand/logo-color.svg" alt="Christian Varisco" width="48" height="48" />
      </a>

      <!-- Desktop Navigation (centered) -->
      <div class="nav-links">
        {navigation.links.map(link => (
          <a href={link.href} class="nav-link">
            {link.label}
          </a>
        ))}
      </div>

      <!-- Right side: Language Switcher + CTA + Mobile Menu -->
      <div class="nav-right">
        <div class="language-switcher-desktop">
          <LanguageSwitcher currentLang={lang} currentPath={currentPath} />
        </div>
        <a
          href={navigation.cta.href}
          class="cta-button"
          target="_blank"
          rel="noopener noreferrer"
        >
          {navigation.cta.label}
        </a>

        <!-- Mobile Menu Button -->
        <button
          type="button"
          class="mobile-menu-button"
          aria-label="Toggle menu"
          id="mobile-menu-button"
        >
          <svg class="menu-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </nav>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="mobile-menu hidden">
    <div class="mobile-menu-content">
      <div class="mobile-language-switcher">
        <LanguageSwitcher currentLang={lang} currentPath={currentPath} />
      </div>
      {navigation.links.map(link => (
        <a href={link.href} class="mobile-nav-link">
          {link.label}
        </a>
      ))}
      <a
        href={navigation.cta.href}
        class="mobile-cta"
        target="_blank"
        rel="noopener noreferrer"
      >
        {navigation.cta.label}
      </a>
    </div>
  </div>
</header>

<!-- Spacer to prevent content from going under fixed header -->
<div class="header-spacer"></div>

<style>
  .header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 50;
    background-color: var(--color-background-primary);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  .header-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 var(--spacing-sm);
  }

  @media (min-width: 768px) {
    .header-container {
      padding: 0 var(--spacing-lg);
    }
  }

  .header-nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 72px;
    position: relative;
  }

  .logo {
    flex-shrink: 0;
    display: flex;
    align-items: center;
    z-index: 10;
  }

  .logo svg {
    width: 44px;
    height: 44px;
  }

  @media (min-width: 768px) {
    .logo svg {
      width: 48px;
      height: 48px;
    }
  }

  .nav-links {
    display: none;
    align-items: center;
    gap: var(--spacing-md);
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
  }

  @media (min-width: 1024px) {
    .nav-links {
      display: flex;
      gap: var(--spacing-lg);
    }
  }

  .nav-link {
    font-size: var(--font-size-base);
    font-weight: 500;
    color: var(--color-text-primary);
    transition: color 0.2s ease;
    white-space: nowrap;
  }

  .nav-link:hover {
    color: var(--color-accent);
  }

  .nav-right {
    display: flex;
    align-items: center;
    gap: var(--spacing-xs);
    z-index: 10;
  }

  .language-switcher-desktop {
    display: none;
  }

  @media (min-width: 640px) {
    .language-switcher-desktop {
      display: flex;
    }
  }

  .mobile-language-switcher {
    padding: var(--spacing-xxs) var(--spacing-xs);
    margin-bottom: var(--spacing-xxs);
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    padding-bottom: var(--spacing-xs);
  }

  .cta-button {
    display: none;
    align-items: center;
    justify-content: center;
    padding: 0.625rem 1.25rem;
    font-size: var(--font-size-sm);
    font-weight: 500;
    color: var(--color-text-primary);
    background-color: transparent;
    border: 1px solid rgba(255, 255, 255, 0.4);
    border-radius: var(--radius-full);
    transition: all 0.2s ease;
    white-space: nowrap;
  }

  @media (min-width: 640px) {
    .cta-button {
      display: inline-flex;
    }
  }

  .cta-button:hover {
    color: var(--color-text-primary);
    border-color: var(--color-text-primary);
    background-color: rgba(255, 255, 255, 0.05);
  }

  .mobile-menu-button {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 0.5rem;
    color: var(--color-text-primary);
    background: transparent;
    border: none;
    cursor: pointer;
  }

  @media (min-width: 1024px) {
    .mobile-menu-button {
      display: none;
    }
  }

  .menu-icon {
    width: 24px;
    height: 24px;
  }

  .mobile-menu {
    background-color: var(--color-background-secondary);
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  .mobile-menu.hidden {
    display: none;
  }

  @media (min-width: 1024px) {
    .mobile-menu {
      display: none !important;
    }
  }

  .mobile-menu-content {
    padding: var(--spacing-sm);
    display: flex;
    flex-direction: column;
    gap: var(--spacing-xxs);
  }

  .mobile-nav-link {
    display: block;
    padding: var(--spacing-xxs) var(--spacing-xs);
    font-size: var(--font-size-base);
    font-weight: 500;
    color: var(--color-text-secondary);
    border-radius: var(--radius-sm);
    transition: all 0.2s ease;
  }

  .mobile-nav-link:hover {
    color: var(--color-text-primary);
    background-color: rgba(255, 255, 255, 0.05);
  }

  .mobile-cta {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-top: var(--spacing-xxs);
    padding: var(--spacing-xxs) var(--spacing-xs);
    font-size: var(--font-size-base);
    font-weight: 600;
    color: var(--color-text-alternate);
    background-color: var(--color-accent);
    border-radius: var(--radius-md);
    transition: all 0.2s ease;
  }

  .mobile-cta:hover {
    opacity: 0.9;
    color: var(--color-text-alternate);
  }

  .header-spacer {
    height: 72px;
  }
</style>

<script>
  const menuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  menuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });

  // Close menu when clicking on a link
  mobileMenu?.querySelectorAll('a').forEach(link => {
    link.addEventListener('click', () => {
      mobileMenu?.classList.add('hidden');
    });
  });
</script>
