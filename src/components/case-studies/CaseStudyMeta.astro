---
interface Props {
  company: string;
  industry: string;
  product: string;
  website: string;
  stats: Array<{ value: string; label: string }>;
  labels: {
    company: string;
    industry: string;
    product: string;
    url: string;
  };
}

const { company, industry, product, website, stats, labels } = Astro.props;
---

<section class="case-study-meta">
  <div class="container">
    <div class="meta-grid">
      <!-- Info Column -->
      <div class="meta-info">
        <div class="meta-item">
          <span class="meta-label">{labels.company}:</span>
          <span class="meta-value">{company}</span>
        </div>
        <div class="meta-item">
          <span class="meta-label">{labels.industry}:</span>
          <span class="meta-value">{industry}</span>
        </div>
        <div class="meta-item">
          <span class="meta-label">{labels.product}:</span>
          <span class="meta-value">{product}</span>
        </div>
        <div class="meta-item">
          <span class="meta-label">{labels.url}:</span>
          <a href={website} class="meta-link" target="_blank" rel="noopener noreferrer">
            {website.replace(/^https?:\/\//, '').replace(/\/$/, '')}
          </a>
        </div>
      </div>

      <!-- Stats -->
      <div class="meta-stats">
        {stats.map((stat) => (
          <div class="stat-item">
            <span class="stat-value">{stat.value}</span>
            <span class="stat-label">{stat.label}</span>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  .case-study-meta {
    padding: var(--spacing-lg) 0;
    background-color: var(--color-background-primary);
  }

  @media (min-width: 768px) {
    .case-study-meta {
      padding: var(--spacing-xl) 0;
    }
  }

  .meta-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--spacing-lg);
  }

  @media (min-width: 768px) {
    .meta-grid {
      grid-template-columns: 1fr auto;
      align-items: end;
      gap: var(--spacing-2xl);
    }
  }

  .meta-info {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-xs);
  }

  .meta-item {
    display: flex;
    gap: var(--spacing-sm);
    align-items: baseline;
  }

  .meta-label {
    font-size: var(--font-size-sm);
    font-weight: 600;
    color: var(--color-text-primary);
    min-width: 80px;
  }

  @media (min-width: 768px) {
    .meta-label {
      font-size: var(--font-size-base);
      min-width: 100px;
    }
  }

  .meta-value {
    font-size: var(--font-size-sm);
    color: var(--color-text-secondary);
  }

  @media (min-width: 768px) {
    .meta-value {
      font-size: var(--font-size-base);
    }
  }

  .meta-link {
    font-size: var(--font-size-sm);
    color: var(--color-text-secondary);
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .meta-link:hover {
    color: var(--color-accent);
  }

  @media (min-width: 768px) {
    .meta-link {
      font-size: var(--font-size-base);
    }
  }

  .meta-stats {
    display: flex;
    gap: var(--spacing-xl);
  }

  @media (min-width: 768px) {
    .meta-stats {
      gap: var(--spacing-3xl);
    }
  }

  .stat-item {
    display: flex;
    flex-direction: column;
    min-width: 120px;
  }

  @media (min-width: 768px) {
    .stat-item {
      min-width: 160px;
    }
  }

  .stat-value {
    font-size: clamp(1.75rem, 5vw, 3rem);
    font-weight: 700;
    color: var(--color-accent);
    line-height: 1;
  }

  .stat-label {
    font-size: var(--font-size-sm);
    color: var(--color-text-secondary);
    margin-top: var(--spacing-xs);
    max-width: 200px;
    line-height: 1.4;
  }

  @media (min-width: 768px) {
    .stat-label {
      font-size: var(--font-size-base);
    }
  }
</style>
