---
interface Props {
  slug: string;
  company: string;
  thumbnail: string;
  shortDescription: string;
  lang: 'en' | 'it';
  index?: number;
  comingSoon?: boolean;
}

const { slug, company, thumbnail, shortDescription, lang, index = 0, comingSoon = false } = Astro.props;
const href = lang === 'it' ? `/case-studies/${slug}/` : `/en/case-studies/${slug}/`;
---

{comingSoon ? (
  <div class={`case-study-card coming-soon scroll-reveal stagger-${(index % 3) + 1}`}>
    <div class="card-image">
      <img
        src={thumbnail}
        alt={`${company} logo`}
        loading="lazy"
        class="thumbnail"
      />
    </div>
    <div class="card-content">
      <h3 class="card-title">{company}</h3>
      <p class="card-description">{shortDescription}</p>
    </div>
  </div>
) : (
  <a href={href} class={`case-study-card scroll-reveal stagger-${(index % 3) + 1}`}>
    <div class="card-image">
      <img
        src={thumbnail}
        alt={`${company} logo`}
        loading="lazy"
        class="thumbnail"
      />
    </div>
    <div class="card-content">
      <h3 class="card-title">{company}</h3>
      <p class="card-description">{shortDescription}</p>
    </div>
  </a>
)}

<style>
  .case-study-card {
    display: block;
    text-decoration: none;
    background-color: transparent;
    transition: transform 0.2s ease, opacity 0.6s ease;
    overflow: hidden;
  }

  .case-study-card:hover {
    transform: translateY(-4px);
  }

  .case-study-card.coming-soon {
    cursor: default;
  }

  .case-study-card.coming-soon:hover {
    transform: none;
  }

  .card-image {
    position: relative;
    aspect-ratio: 16 / 10;
    background-color: var(--color-background-secondary);
    border: 1px solid var(--Border-tertiary, #444444);
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .thumbnail {
    width: 100%;
    height: 100%;
    object-fit: contain;
    padding: var(--spacing-xl);
  }

  .card-content {
    padding: var(--spacing-sm) 0;
  }

  @media (min-width: 768px) {
    .card-content {
      padding: var(--spacing-md) 0;
    }
  }

  .card-title {
    font-size: var(--font-size-base);
    font-weight: 700;
    color: var(--color-text-primary);
    margin-bottom: var(--spacing-xxs);
  }

  @media (min-width: 768px) {
    .card-title {
      font-size: var(--font-size-lg);
    }
  }

  .card-description {
    font-size: var(--font-size-sm);
    color: var(--color-text-secondary);
    line-height: 1.5;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  @media (min-width: 768px) {
    .card-description {
      font-size: var(--font-size-base);
    }
  }
</style>
